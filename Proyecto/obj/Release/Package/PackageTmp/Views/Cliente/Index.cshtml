@model IEnumerable<Proyecto.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Clientes Registrados</h2>

<p>
    @Html.ActionLink("Crear Nuevo Cliente", "Crear")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoIdentificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Identificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoIdentificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.IdCliente }) |
                @Html.ActionLink("Detalles", "Consulta", new { id = item.IdCliente }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.IdCliente })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Regresar al Menú Principal", "Index", "Home")