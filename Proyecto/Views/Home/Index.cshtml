@{
    ViewBag.Title = "Home Page";
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

<style>
    /* Remove the navbar's default rounded borders and increase the bottom margin */
    .navbar {
        margin-bottom: 50px;
        border-radius: 0;
    }

    /* Remove the jumbotron's default bottom margin */
    .jumbotron {
        margin-bottom: 0;
    }

    /* Add a gray background color and some padding to the footer */
    footer {
        background-color: #f2f2f2;
        padding: 25px;
    }
</style>

<div class="jumbotron">
    <div class="container text-center">
        <h1>Bienvenido,  @ViewBag.Usuario!</h1>
        <p>@ViewBag.Rol (a) de la cuenta</p>
    </div>
</div>

<br />

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <ul>
                        <li>@Html.ActionLink("Agregar Usuario", "Crear", "Usuario")</li>
                    </ul>
                </div>
                <div class="panel-body"><img src="~/Images/usuario.png" class="img-responsive" style="width:65%" alt="Image"></div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="panel panel-default ">
                <div class="panel-heading">
                    <ul>
                        <li>@Html.ActionLink("Agregar Empresa", "Crear", "Empresa")</li>
                    </ul>
                </div>
                <div class="panel-body"><img src="~/Images/empresa.png" class="img-responsive" style="width:65%" alt="Image"></div>
            </div>
        </div>
        @if (User.IsInRole("Administrador"))
        {
            <div class="col-sm-4">
                <div class="panel panel-default ">
                    <div class="panel-heading">
                        <ul>
                            <li>@Html.ActionLink("Asignar Rol a Usuario", "Crear", "Roluser")</li>
                        </ul>
                    </div>
                    <div class="panel-body"><img src="~/Images/roles.png" class="img-responsive" style="width:65%" alt="Image"></div>
                </div>
            </div>
        }
        else
        {
            <div class="col-sm-4">
                <div class="panel panel-default ">
                    <div class="panel-heading">
                        <ul>
                            <li>@Html.ActionLink("Administrar Tipos de Identificación", "Index", "TipoIdentificacion")</li>
                        </ul>
                    </div>
                    <div class="panel-body"><img src="~/Images/id.png" class="img-responsive" style="width:65%" alt="Image"></div>
                </div>
            </div>
        }

    </div>
</div>
<br>

